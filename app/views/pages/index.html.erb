<h1>文章列表</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="row">#</th>
    <th scope="row">标题</th>
    <th scope="row">类型</th>
    <th scope="row">发布时间</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <th scope="row"><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= get_type_text article.level %></td>
      <td><%= article.created_at %></td>
      <td><%= link_to '查看', article_path(article) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

